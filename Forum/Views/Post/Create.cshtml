@model Forum.Models.Post.NewPostModel

<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading noBorder">
            Нове повідомлення | @Model.ForumName
            <div class="forumLogo" style="background-image:url(@Model.ForumImageUrl)"></div>
            <span id="headingBtn">
                @Html.ActionLink("Назад до" + Model.ForumName.ToString(), "Topic", "Forum", new { id = Model.ForumId}, htmlAttributes: new { @class = "btn btn-back"})
            </span>
        </div>
    </div>
    <div class="row">
        <div class="createPostSection">
            <div class="authorBlock">
                Ви ви відправляєте це повідомлення як: <strong>@Model.AuthorName</strong>
            </div>
            @using (Html.BeginForm("AddPost", null, FormMethod.Post, htmlAttributes: new { id = "addPostForm" }))
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, "Заголовок") <br />
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", id ="postTitle" } })

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Content, "Зміст")<br />
                    @Html.TextAreaFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })

                </div>
                <div class="form-group">
                    @Html.HiddenFor(model => model.ForumId)
                </div>
                <button type="submit" id="submitPostBtn" class="btn btn-submitPost">Відправити пост</button>
            }
        </div>
    </div>
</div>



